<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/conveter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Conveter"
        android:textSize="30sp"
        android:layout_marginBottom="30sp"/>

    <TextView
        android:id="@+id/northTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/conveter"
        android:text="North"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginLeft="20sp"/>

    <EditText
        android:id="@+id/northEditText"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/northTextView"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:hint="North"
        android:text="300"
        android:inputType="numberDecimal"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textColorLink="@color/colorPrimary" />

    <TextView
        android:id="@+id/southTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/conveter"
        android:layout_alignParentRight="true"
        android:text="South"
        android:layout_marginLeft="20sp"
        android:layout_toRightOf="@id/northEditText"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/southEditText"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/southTextView"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="South"
        android:text="300"
        android:inputType="number"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="56dp"
        android:layout_toRightOf="@id/northEditText"
        android:textColorLink="@color/colorPrimary" />

    <TextView
        android:id="@+id/easttextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/northEditText"
        android:text="East"
        android:textSize="24sp"
        android:layout_marginLeft="20sp"/>

    <EditText
        android:id="@+id/eastEditText"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/easttextView"
        android:ems="10"
        android:hint="East"
        android:text="600"
        android:inputType="number"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>

    <TextView
        android:id="@+id/westTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/southEditText"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/eastEditText"
        android:layout_marginLeft="20sp"
        android:text="West"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/westEditText"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/westTextView"
        android:ems="10"
        android:text="600"
        android:layout_toRightOf="@id/eastEditText"
        android:hint="West"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_alignParentRight="true"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eastEditText"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingRight="60sp"
        android:paddingLeft="60sp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30sp"/>

    <TextView
        android:id="@+id/acreeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_alignParentLeft="true"
        android:text="Acree"
        android:textSize="30sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="30sp"/>

    <TextView
        android:id="@+id/guntaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gunta"
        android:textSize="30sp"
        android:layout_marginLeft="20sp"
        android:layout_below="@id/acreeTextView" />

</RelativeLayout>